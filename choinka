#include "pch.h"
#include <iostream>

using namespace std;

int main()
{
	int wielkosc;
	cout << "Podaj wielkosc choinki:" << endl;
	cin >> wielkosc;

	
	
	for (int i = 1; i <= wielkosc; i++)
	{
		for (int j = 1; j <= wielkosc - i; j++)
		{
			cout << " ";
		}
		for (int j = 1; j <= i * 2 - 1; j++)
		{
			cout << "#";
		}
		cout << endl;
	}
}
