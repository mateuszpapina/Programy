#include "pch.h"
#include <iostream>
#include <string>
#include <fstream>
#include <stdio.h>

using namespace std;

void dodawanie_wpisow();
void kasowanie_wpisow();

string imiona[20], nazwiska[20];
int i = 0;

int main()
{
	for (;;)
	{
		string opcja;

		cout << "MENU GLOWNE" << endl
			<< "############################" << endl
			<< "C - tworzenie nowych wpisow" << endl
			<< "R - przeglad danych" << endl
			<< "U - aktualizacja istniejacych wpisow" << endl
			<< "D - kasowanie istniejacych wpisow" << endl
			<< "E - wylacz program" << endl
			<< "############################" << endl
			<< "Wybierz opcje: ";
		cin >> opcja;

		if (opcja == "c" || opcja == "C")
		{
			dodawanie_wpisow();
		}

		else if (opcja == "r" || opcja == "R")
		{
			for (int x = 0; x <= i - 1; x++)
			{
				ifstream plik("C:/Users/mateu/Source/Repos/ConsoleApplication2/ConsoleApplication2/telefon_" + string(imiona[x]) + "_" + string(nazwiska[x]) + ".txt");

				if (plik)
				{
					string linia;     

					while (getline(plik, linia))    
					{
						cout << linia << endl; 
					}
				}

				else
				{
					cout << endl;
				}

				cout << endl;
				 
				plik.close();
			}
			

		}

		else if (opcja == "u" || opcja == "U")
		{
			cout << "Dane kontaktu ktore chcesz zmienic:" << endl
				<< "############################" << endl;
			kasowanie_wpisow();
			cout << endl << "Nowe dane kontaktu" << endl 
				<< "############################" << endl;
			dodawanie_wpisow();
		}

		else if (opcja == "d" || opcja == "D")
		{
			kasowanie_wpisow();
		}

		else if (opcja == "e" || opcja == "E")
		{
			exit(0);
		}

		cout << endl;
	}

}

void dodawanie_wpisow()
{
	string nr_telefonu;

	cout << "Wpisz imie: ";
	cin >> imiona[i];

	cout << "Wpisz nazwisko: ";
	cin >> nazwiska[i];
	

	cout << "Wpisz numer telefonu: ";
	cin >> nr_telefonu;

	fstream plik;
	plik.open("telefon_" + string(imiona[i]) + "_" + string(nazwiska[i]) + ".txt", ios::out);

	plik << imiona[i] << endl
		<< nazwiska[i] << endl
		<< nr_telefonu;

	plik.close();
	
	i++;
}

void kasowanie_wpisow()
{
	string imie, nazwisko;

	cout << "Wpisz imie: ";
	cin >> imie;

	cout << "Wpisz nazwisko: ";
	cin >> nazwisko;

	fstream plik;
	plik.open("telefon_" + string(imie) + "_" + string(nazwisko) + ".txt", ios::in);

	if (plik.good() == false)
	{
		cout << "Brak takiego kontaktu!" << endl;
		main();
	}
	
	else
	{
	ofstream plik("telefon_" + string(imie) + "_" + string(nazwisko) + ".txt");
	}

	plik.close();
}
